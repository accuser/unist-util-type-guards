{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "tests/**/*.test.ts"],
	"exclude": ["dist", "tests/**/*.test.ts"]
}
