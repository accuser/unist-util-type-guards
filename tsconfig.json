{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDirs": ["./src", "./types"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["src/**/*.test.ts"]
}
